<% if @shelter %>
  <h1>Available for Adoption at <%= @shelter.name %></h1>
  <%= link_to 'New Pet', "/shelters/#{@shelter.id}/pets/new" %>
    <% @pets.each do |pet| %>
      <h2>Name: <%= pet.name %></h2>
        <p>Age: <%= pet.approximate_age %></p>
        <p>Sex:<%= pet.sex %></p>
        <img src= <%= pet.image %>
    <% end %>
<% else %>
  <h1>All Pets</h1>
    <% @pets.each do |pet| %>
      <h2>Name: <%= pet.name %></h2>
        <p>Age: <%= pet.approximate_age %></p>
        <p>Sex:<%= pet.sex %></p>
        <p>Available at: <%= pet.shelter.name %></p>
        <img src= <%= pet.image %>>
  <% end %>
<% end %>
